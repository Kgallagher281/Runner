<div class="post-design">

<p id="notice"><%= notice %></p>

<%= render 'home/navbar' %>

<h1>Your Posts</h1>
<img src="http://static.wixstatic.com/media/3cc615_323631ae328f4ea2b8a4d8837f08107d.jpg_256">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Post', new_post_path %>

</div>


  <h1>Newsfeed</h1>
<% @posts.each do |post| %>


<p><a href="/users/<%= post.user.id %>">
  <%= post.user.first_name + " " + post.user.last_name %></a></p>
    <strong><%= post.title %></strong>
    <br>
    <%= post.body %>
<% end %>