<div class="all-races">

	<%= render "home/navbar" %>

	<h2>Upcoming Races</h2>

	<table>
	  <thead>
	    <tr>
	      <th>Name</th>
	      <th>Details</th>
	      <th>Date</th>
	      <th>Address</th>
	      <th>Distance</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @races.each do |race| %>
	      <tr>
	        <td><%= race.name %></td>
	        <td><%= race.details %></td>
	        <td><%= race.date %></td>
	        <td><%= race.address %></td>
	        <td><%= race.distance %></td>
	        <td><%= link_to 'Show', race %></td>
	        <td><%= link_to 'Edit', edit_race_path(race) %></td>
	        <td><%= link_to 'Destroy', race, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

</div>