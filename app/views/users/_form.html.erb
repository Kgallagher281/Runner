<div class="form">
  <div class="form-table">
  <%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <h1>Sign Up</h1>

    <div class="field">
      <%= form.label :photo %>
      <%= form.file_field :photo, id: :user_photo %>
    </div>

    <div class="field">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, id: :user_first_name %>
    </div>

    <div class="field">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, id: :user_last_name %>
    </div>

    <div class="field">
      <%= form.label :username %>
      <%= form.text_field :username, id: :user_username %>
    </div>

    <div class="field">
      <%= form.label :password %>
      <%= form.text_field :password, id: :user_password %>
    </div>

<!--This is the group drop down selection  -->
    <div class="field">
      <%= form.label :distance_id %>
      <%= form.select :distance_id, [['5K', 1], ['10K', 2], ['Half-Marathon', 3], ['Marathon', 4]] %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
</div>
